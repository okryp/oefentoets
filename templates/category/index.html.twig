{% extends 'base.html.twig' %}

{% block title %}Pizza keuzestress{% endblock %}

{% block body %}
    <h1>Wat voor pizza wil je bestellen vandaag?</h1>
    <div class="row gx-3">
        {%  for category in categories %}
            <div class="col-6 col-md-4 d-flex align-items-stretch">
                <div class="card mb-3">
                    <div class="row g-1">
                        <div class="col-md-4">
                            <img src="{{ asset(category.image) }}" class="img-fluid rounded-start" alt="{{ category.name }}">
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">{{ category.name }}</h5>
                                <p class="card-text">
                                    {{ category.description }}
                                </p>
                                <a href="{{ path('app_category_products', {'category': category.id}) }}" class="btn btn-outline-primary">Bestel!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
